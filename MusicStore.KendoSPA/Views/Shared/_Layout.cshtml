<!DOCTYPE html>
<html >
<head>
    <title>Sample Kendo UI AngularJS Application</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="@Url.Content("~/Content/kendo/2016.2.607/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2016.2.607/kendo.mobile.all.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2016.2.607/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2016.2.607/kendo.default.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2016.2.607/kendo.dataviz.default.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/kendo/2016.2.607/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular.min.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0/angular-resource.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0/angular-route.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ngStorage/0.3.6/ngStorage.min.js"></script>
    <script src="@Url.Content("~/Scripts/kendo/2016.2.607/jszip.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2016.2.607/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/js/app.js")"></script>
    <script src="@Url.Content("~/js/controllers.js")"></script>
    <script src="@Url.Content("~/js/services.js")"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />

    <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />

</head>
<body  ng-app="musicstoreApp" >
    
    <div id="page">
        <div id="pageHeader">
            <ul class="menu">
                <li><a href="#/Login">Log In</a></li>
                <li><a href="#/Register">Register</a></li>
            </ul>
            <div class="logo"></div>
        </div>
        <div id="navigation">
            <ul class="menu">
                <li><a href="#" class="active">Home</a></li>
                <li><a href="#/CatalogAlbums">Catalog</a></li>
                <li><a href="#/ShoppingCart">My Cart</a></li>
            </ul>
        </div>
        <div id="pageContent">
            <div class="b">
                <div class="left">
                    <div class="submenu" ng-controller="GenreCtrl">
                        <h2>Album Genre</h2>
                        <ul class="f12">
                            <li ng-repeat="genre in genres">
                                <a href="#/AlbumsByGenre/{{genre.GenreId}}">{{genre.Name}}</a>
                            </li>
                        </ul>

                    </div>
                </div>
                <div class="right">
                    @RenderBody()
                </div>
            </div>
        </div><div class="pageContentFooter"></div>
        <div class="block margin_t_10">
            <div class="h"></div>
            <div class="b">
                <div class="newsletter margin_l_10">
                    <div class="cGray bold">Join Newsletter</div>
                    <p class="f11">
                        The weekly newsletter to help you learn more about technology and promotions.
                        <input type="text" class="newsletter_text" /><input type="button" value="Subscribe" class="newsletter_btn" />
                    </p>
                </div>
                <div class="line"></div>
                <div class="fLeft w180">
                    <div class="cGray bold">Customer Service</div>
                    <ul class="list">
                        <li><a href="">Help</a></li>
                        <li><a href="">Contact Us</a></li>
                        <li><a href="">About Us</a></li>
                        <li><a href="">Online Returns </a></li>
                    </ul>
                </div>
                <div class="fLeft w180">
                    <div class="cGray bold">Shopping Policy</div>
                    <ul class="list">
                        <li><a href="">Terms & Conditions</a></li>
                        <li><a href="">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="fLeft w180">
                    <div class="cGray bold">Your Order</div>
                    <ul class="list">
                        <li><a href="">Order Status</a></li>
                        <li><a href="">Shipping & Delivery</a></li>
                        <li><a href="">Store Pickup</a></li>
                        <li><a href="">Find a Rebate</a></li>
                        <li><a href="">Returns</a></li>
                    </ul>
                </div>
            </div>
            <div class="f"></div>
        </div>
        <div id="pageFooter">
            © Music Store All Rights Reserved. Dev by <a href="http://www.cwcadrspace.com//" target="_blank">cwcadrspace</a>
        </div>
    </div>
    @section scripts
    {
        @RenderSection("scripts", false)
    }
    <script>
        $('#navigation > ul.menu li a').click(function (e) {
            $('.menu li a.active').removeClass('active');
            var $this = $(this);
            $this.addClass('active');
           // e.preventDefault();
        });

    </script>
</body>
</html>
