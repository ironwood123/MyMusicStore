
@{
    Layout = null;
}
<style>
    .demo-section > div {
        float: left;
        margin-bottom: 2em;
    }

    .fieldlist {
        margin: 0 0 -2em;
        padding: 0;
    }

        .fieldlist li {
            list-style: none;
            padding-bottom: 2em;
        }

        .fieldlist label {
            display: block;
            padding-bottom: 1em;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 12px;
            color: #444;
        }
</style>


<div class="demo-section k-content wide" style="padding:20px">
    <form class="" id="frmLogin">
        <h3>Log In</h3>
        <ul class="fieldlist">
            <li>
                <label class="" for="email">User Name</label>
                <input class="k-textbox col-md-6" type="text" ng-model="username" required id="username" />
            </li>
            <li>
                <label class="" for="password">Password</label>
                <input class="k-textbox col-md-6" type="password" ng-model="password" id="password" required />
            </li>
            <li>
                <button type="submit" class="k-button" ng-click="login()">Login</button>
            </li>
        </ul>
    </form>
</div>