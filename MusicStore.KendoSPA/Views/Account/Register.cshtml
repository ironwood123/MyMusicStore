
@{
    Layout = null;
}
<style>
            .demo-section > div {
            float: left;
            margin-bottom: 2em;
            }
            .fieldlist {
                margin: 0 0 -2em;
                padding: 0;
            }

            .fieldlist li {
                list-style: none;
                padding-bottom: 2em;
            }

            .fieldlist label {
                display: block;
                padding-bottom: 1em;
                font-weight: bold;
                text-transform: uppercase;
                font-size: 12px;
                color: #444;
            }
</style>
<title>Register</title>

<div class="demo-section k-content wide" style="padding:20px">
    <form class="" id="frmLogin">
        <h3>Register</h3>
        <ul class="fieldlist">
            <li>
                <label class="" for="email">Email</label>
                <input class="k-textbox col-md-6" type="text" ng-model="email" required id="email" />
            </li>
            <li>
                <label class="" for="password">Password</label>
                <input class="k-textbox col-md-6" type="password" ng-model="password" id="password" required />
            </li>
            <li>
                <label class="" for="confirmpassword">Confirm Password</label>
                <input class="k-textbox col-md-6" type="password" ng-model="confirmedpassword" id="confirmpassword" />
            </li>
            <li>
                <button type="submit" class="k-button" ng-click="registeruser()">Register</button>
            </li>
        </ul>
    </form>
</div>

<script>
    $(document).ready(function () {
        $("form").kendoValidator({
            messages: {
                required: function (input) {
                    var element = input[0],
                        label = $(element.form).find("[for=" + element.id + "]");
                    return label.text().replace(":", "") + " is required.";
                },
                email: "Please provide a valid email address"
            }
        });
    });
</script>